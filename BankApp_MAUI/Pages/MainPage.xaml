<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BankApp_MAUI.ViewModels"
             x:Class="BankApp_MAUI.Pages.MainPage"
             x:DataType="vm:MainViewModel"
             Shell.NavBarIsVisible="True"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource BackgroundBlack}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Welkom -->
            <Label Text="{Binding GebruikerNaam, StringFormat='Welkom, {0}'}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"/>

            <!-- Saldo Card (Goud zoals WPF) -->
            <Frame BackgroundColor="{StaticResource GoldCard}"
                   CornerRadius="20"
                   Padding="30"
                   HasShadow="True"
                   Margin="0,10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Huidig Saldo"
                           FontSize="20"
                           TextColor="Black"/>
                    
                    <Label Text="{Binding TotaalSaldo, StringFormat='â‚¬{0:F2}'}"
                           FontSize="48"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    
                    <Label Text="Zichtrekening"
                           FontSize="14"
                           TextColor="Black"
                           Opacity="0.8"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Sync status -->
            <Label Text="{Binding LaatsteSyncTijd, StringFormat='Laatste sync: {0:HH:mm}'}"
                   TextColor="White"
                   FontSize="12"
                   IsVisible="{Binding LaatsteSyncTijd, Converter={StaticResource IsNotNullConverter}}"/>

            <!-- Snelle Acties -->
            <Label Text="Snelle Acties"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,20,0,10"/>

            <!-- Overschrijven (Groen) -->
            <Button Text="Overschrijven"
                    Command="{Binding NavigateToOverschrijvingCommand}"
                    BackgroundColor="{StaticResource PrimaryGreen}"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="10"/>

            <!-- Rekeningen (Blauw) -->
            <Button Text="Mijn Rekeningen"
                    Command="{Binding NavigateToRekeningenCommand}"
                    BackgroundColor="{StaticResource SecondaryBlue}"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="10"/>

            <!-- Transacties (Paars) -->
            <Button Text="Transacties"
                    Command="{Binding NavigateToTransactiesCommand}"
                    BackgroundColor="{StaticResource ProfilePurple}"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="10"/>

            <!-- Synchroniseren -->
            <Button Text="Synchroniseren"
                    Command="{Binding SyncDataCommand}"
                    BackgroundColor="{StaticResource ContactRed}"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="10"
                    Margin="0,20,0,0"/>

            <!-- Loading -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{StaticResource PrimaryGreen}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
