<Window x:Class="BankApp_WPF.KlantendienstPagina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="Klantendienst"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#000000"
        KeyDown="Window_KeyDown">


    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <!-- Titel -->
            <TextBlock Text="Contacteer de Klantendienst"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"/>

            <!-- Naam -->
            <TextBlock Text="Naam:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="TxtNaam" Height="35" Margin="0,5,0,15" FontSize="16"/>

            <!-- Email -->
            <TextBlock Text="E-mail:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="TxtEmail" Height="35" Margin="0,5,0,15" FontSize="16"/>

            <!-- Onderwerp -->
            <TextBlock Text="Onderwerp:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="TxtOnderwerp" Height="35" Margin="0,5,0,15" FontSize="16"/>

            <!-- Bericht -->
            <TextBlock Text="Bericht:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="TxtBericht" Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                     Margin="0,5,0,15" FontSize="16"/>

            <!-- Foutmelding -->
            <TextBlock x:Name="TxtError" Foreground="Red" Visibility="Collapsed" FontSize="14" Margin="0,0,0,15"/>

            <!-- Knoppen -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="BtnVerstuur"
                        Content="Versturen"
                        Width="130"
                        Height="40"
                        FontSize="16"
                        Background="#10B981"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnVerstuur_Click"/>

                <Button x:Name="BtnBack"
                        Content="Terug"
                        Width="100"
                        Height="40"
                        FontSize="16"
                        Background="#1E88E5"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnBack_Click"
                        Margin="10,0,0,0"/>

                <Button x:Name="BtnTheme"
                        Content="?"
                        Width="60"
                        Height="40"
                        FontSize="20"
                        Background="#FDB022"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnTheme_Click"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
