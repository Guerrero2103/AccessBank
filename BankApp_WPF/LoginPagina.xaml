<Window x:Class="BankApp_WPF.LoginPagina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AccessBank - Login"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#000000"
        >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

            <!-- Titel -->
            <TextBlock Text="Inloggen bij AccessBank"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"/>

            <!-- E-mail -->
            <TextBlock Text="E-mail:"
                       Foreground="White"
                       FontSize="16"/>
            <TextBox x:Name="TxtEmail"
                     Height="35"
                     Margin="0,5,0,15"
                     FontSize="16"/>

            <!-- Wachtwoord -->
            <TextBlock Text="Wachtwoord:"
                       Foreground="White"
                       FontSize="16"/>
            <PasswordBox x:Name="TxtPassword"
                         Height="35"
                         Margin="0,5,0,15"
                         FontSize="16"
                         KeyDown="TxtPassword_KeyDown"/>

            <!-- Foutmelding -->
            <TextBlock x:Name="TxtError"
                       Foreground="Red"
                       Visibility="Collapsed"
                       FontSize="14"
                       Margin="0,0,0,15"/>

            <!-- Knoppen -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="BtnLogin"
                        Content="Inloggen"
                        Width="120"
                        Height="40"
                        FontSize="16"
                        Background="#10B981"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Click="BtnLogin_Click"/>

                <Button x:Name="BtnBack"
                        Content="Terug"
                        Width="100"
                        Height="40"
                        FontSize="16"
                        Background="#1E88E5"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Click="BtnBack_Click"/>

                <Button x:Name="BtnTheme"
                        Content="☀"
                        Width="60"
                        Height="40"
                        FontSize="20"
                        Background="#FDB022"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnTheme_Click"/>
            </StackPanel>

            <!-- Wachtwoord vergeten -->
            <TextBlock Text="Wachtwoord vergeten?"
                       Foreground="LightBlue"
                       FontSize="14"
                       Margin="0,25,0,0"
                       HorizontalAlignment="Center"
                       Cursor="Hand"
                       MouseLeftButtonDown="LinkForgotPassword_Click"/>

        </StackPanel>
    </Grid>
</Window>
