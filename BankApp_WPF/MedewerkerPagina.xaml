<Window x:Class="BankApp_WPF.MedewerkerPagina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medewerker Dashboard"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#000000"
        KeyDown="Window_KeyDown">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Height="60"
                    Width="180"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="White"
                    BorderThickness="4"
                    Cursor="Hand"
                    Click="BackButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="‚Üê" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Terug" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <TextBlock Grid.Column="1"
                       Text="Medewerker Dashboard"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- TAB CONTROL -->
        <TabControl x:Name="MainTabControl"
                    Grid.Row="1"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="0,0,0,30">

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Background" Value="#1F2937"/>
                    <Setter Property="BorderBrush" Value="#374151"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Padding" Value="30,15"/>
                    <Setter Property="Margin" Value="1"/>
                </Style>

            </TabControl.Resources>

            <!-- TAB 1 -->
            <TabItem Header="‚è≥ Wachtende Overschrijvingen">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="20">

                        <!-- Zoekbalk -->
                        <Border Background="#1F2937"
                                BorderBrush="#374151"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="ZoekWachtendTextBox"
                                         Grid.Column="0"
                                         Height="50"
                                         FontSize="18"
                                         Background="#111827"
                                         Foreground="White"
                                         BorderBrush="#4B5563"
                                         BorderThickness="2"
                                         Padding="15,0"
                                         VerticalContentAlignment="Center"/>

                                <Button Grid.Column="2"
                                        Content="Zoek"
                                        Height="50"
                                        Width="120"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Background="#9333EA"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnZoekWachtend_Click"/>

                                <Button Grid.Column="4"
                                        Content="Reset"
                                        Height="50"
                                        Width="120"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Background="#6B7280"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnResetWachtend_Click"/>
                            </Grid>
                        </Border>

                        <!-- LIST -->
                        <ItemsControl x:Name="WachtendeOverschrijvingenListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>

                                    <Border Background="#1C1C1C"
                                            BorderBrush="#374151"
                                            BorderThickness="4"
                                            CornerRadius="12"
                                            Padding="30"
                                            Margin="0,0,0,20">
                                        <StackPanel>

                                            <!-- ICON HEADER -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                                <Border Background="#F59E0B"
                                                        Width="50"
                                                        Height="50"
                                                        CornerRadius="25"
                                                        Margin="0,0,15,0">
                                                    <TextBlock Text="üí∏"
                                                               FontSize="28"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel>
                                                    <TextBlock Text="Overschrijving"
                                                               FontSize="24"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                    <TextBlock FontSize="16" Foreground="#9CA3AF" Margin="0,5,0,0">
                                                        <Run Text="Datum: "/>
                                                        <Run Text="{Binding Datum, StringFormat='dd/MM/yyyy HH:mm'}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- DETAILS -->
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                    <TextBlock Text="Van:" FontSize="18" FontWeight="SemiBold" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Gebruiker.Voornaam}" FontSize="20" Foreground="White"/>
                                                    <TextBlock Text="{Binding Gebruiker.Achternaam}" FontSize="20" Foreground="White"/>
                                                    <TextBlock Text="{Binding Gebruiker.Email}" FontSize="16" Foreground="#9CA3AF"/>
                                                    <TextBlock Text="{Binding Gebruiker.Telefoonnummer}" FontSize="16" Foreground="#9CA3AF"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Details:" FontSize="18" FontWeight="SemiBold" Foreground="#9CA3AF"/>
                                                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="#F59E0B">
                                                        <Run Text="‚Ç¨ "/>
                                                        <Run Text="{Binding Bedrag, StringFormat=N2}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding VanIban}" FontSize="16" Foreground="#9CA3AF"/>
                                                    <TextBlock Text="{Binding NaarIban}" FontSize="16" Foreground="#9CA3AF"/>
                                                    <TextBlock Text="{Binding Omschrijving}" FontSize="16" Foreground="#9CA3AF"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- ACTIONS -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0"
                                                        Height="60"
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        Background="#3B82F6"
                                                        Foreground="White"
                                                        Tag="{Binding}"
                                                        Cursor="Hand"
                                                        Click="BtnBelKlant_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="üìû" FontSize="20" Margin="0,0,10,0"/>
                                                        <TextBlock Text="Bel Klant"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button Grid.Column="2"
                                                        Height="60"
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        Background="#10B981"
                                                        Foreground="White"
                                                        Tag="{Binding}"
                                                        Cursor="Hand"
                                                        Click="BtnBevestig_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="‚úî" FontSize="20" Margin="0,0,10,0"/>
                                                        <TextBlock Text="Bevestig"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button Grid.Column="4"
                                                        Height="60"
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        Background="#DC2626"
                                                        Foreground="White"
                                                        Tag="{Binding}"
                                                        Cursor="Hand"
                                                        Click="BtnAfwijs_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="‚úñ" FontSize="20" Margin="0,0,10,0"/>
                                                        <TextBlock Text="Afwijzen"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>

                                        </StackPanel>
                                    </Border>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Geen items -->
                        <TextBlock x:Name="GeenWachtendTextBlock"
                                   Text="Geen wachtende overschrijvingen"
                                   FontSize="24"
                                   Foreground="#9CA3"
                                   HorizontalAlignment="Center"
                                   Visibility="Collapsed"
                                   Margin="0,40,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 2: Klantgegevens Beheren -->
            <TabItem Header="üë§ Klantgegevens Beheren">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" PanningMode="VerticalOnly">
                    <StackPanel Margin="20">
                        <!-- Zoekveld voor klanten -->
                        <Border Background="#1f2533"
                                BorderBrush="#3a4152"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="15"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Zoek klant"
                                           Foreground="White"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ZoekKlantTextBox"
                                             Grid.Column="0"
                                             Background="#2a3142"
                                             Foreground="White"
                                             BorderBrush="#3a4152"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             Height="35"
                                             FontSize="14"/>
                                    <Button Grid.Column="2"
                                            Content="Zoek"
                                            Background="#9333EA"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="20,8"
                                            Height="35"
                                            Cursor="Hand"
                                            Click="BtnZoekKlant_Click"/>
                                    <Button Grid.Column="4"
                                            Content="Reset Filter"
                                            Background="#6B7280"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="20,8"
                                            Height="35"
                                            Cursor="Hand"
                                            Click="BtnResetKlant_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <TextBlock x:Name="KlantenTellerTextBlock"
                                   Text="Klanten overzicht (0)"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <!-- ItemsControl met data binding (geen eigen scroll) -->
                        <ItemsControl x:Name="KlantenListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1f2533"
                                            BorderBrush="#3a4152"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Padding="15"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Foreground="White"
                                                           FontWeight="Bold"
                                                           FontSize="12">
                                                    <Run Text="{Binding Voornaam}"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding Achternaam}"/>
                                                    <Run Text=" | "/>
                                                    <Run Text="{Binding Email}"/>
                                                </TextBlock>
                                                <TextBlock Foreground="#999999" FontSize="11" Margin="0,3,0,0">
                                                    <Run Text="Telefoon: "/>
                                                    <Run Text="{Binding Telefoonnummer}"/>
                                                </TextBlock>
                                                <TextBlock Foreground="#999999" FontSize="11" Margin="0,3,0,0">
                                                    <Run Text="Adres: "/>
                                                    <Run Text="{Binding Straatnaam}"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding Huisnummer}"/>
                                                    <Run Text=", "/>
                                                    <Run Text="{Binding Postcode}"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding Gemeente}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Background="#3b82f6"
                                                        Foreground="White"
                                                        Padding="15,8"
                                                        Margin="5"
                                                        Cursor="Hand"
                                                        Click="BtnBewerkenKlant_Click"
                                                        Tag="{Binding Id}">
                                                    ‚úèÔ∏è Bewerken
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="GeenKlantenTextBlock"
                                   Text="Geen klanten gevonden"
                                   FontSize="24"
                                   Foreground="#9CA3AF"
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,0"
                                   Visibility="Collapsed"/>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 3: Klantberichten -->
            <TabItem Header="üìß Klantberichten">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" PanningMode="VerticalOnly">
                    <StackPanel Margin="20">
                        <!-- Titel -->
                        <TextBlock Text="Klantberichten"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,20"/>

                        <!-- Berichten List -->
                        <ItemsControl x:Name="KlantBerichtenListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1f2533"
                                            BorderBrush="#3a4152"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Padding="20"
                                            Margin="0,0,0,15">
                                        <StackPanel>
                                            <!-- Header -->
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Naam}"
                                                               FontSize="20"
                                                               FontWeight="Bold"
                                                               Foreground="White"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Email}"
                                                               FontSize="14"
                                                               Foreground="#9CA3AF"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding Datum, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                               FontSize="12"
                                                               Foreground="#9CA3AF"
                                                               Margin="0,0,0,5"/>
                                                    <Border Background="#3B82F6"
                                                            CornerRadius="3"
                                                            Padding="8,4">
                                                        <TextBlock Text="{Binding Status}"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Onderwerp -->
                                            <TextBlock Text="{Binding Onderwerp}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="#3B82F6"
                                                       Margin="0,0,0,10"/>

                                            <!-- Bericht -->
                                            <TextBlock Text="{Binding Bericht}"
                                                       FontSize="14"
                                                       Foreground="White"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,15"/>

                                            <!-- Acties -->
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Markeer als Behandeld"
                                                        Background="#10B981"
                                                        Foreground="White"
                                                        Padding="15,8"
                                                        Height="35"
                                                        FontSize="14"
                                                        Cursor="Hand"
                                                        Tag="{Binding}"
                                                        Click="BtnBehandeld_Click"
                                                        Margin="0,0,10,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="GeenBerichtenTextBlock"
                                   Text="Geen klantberichten"
                                   FontSize="24"
                                   Foreground="#9CA3AF"
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- HINT -->
        <Border Grid.Row="2"
                Background="#1F2937"
                BorderBrush="#374151"
                BorderThickness="2"
                CornerRadius="8"
                Padding="15"
                HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Border Background="#4B5563"
                        CornerRadius="6"
                        Padding="10,5"
                        Margin="0,0,10,0">
                    <TextBlock Text="Z"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"/>
                </Border>

                <TextBlock Text="Druk op 'Z' om terug te gaan"
                           FontSize="16"
                           Foreground="#D1D5DB"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
