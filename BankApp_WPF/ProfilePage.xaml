<Window x:Class="BankApp_WPF.ProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profiel Raadplegen"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#000000"
        KeyDown="Window_KeyDown">
	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- HEADER -->
		<Grid Grid.Row="0" Margin="0,0,0,30">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button x:Name="BackButton"
                    Grid.Column="0"
                    Height="60"
                    Width="180"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="White"
                    BorderThickness="4"
                    Cursor="Hand"
                    Click="BackButton_Click">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="â†" FontSize="24" Margin="0,0,10,0"/>
					<TextBlock Text="Terug" VerticalAlignment="Center"/>
				</StackPanel>
			</Button>

			<TextBlock Grid.Column="1"
                       Text="Profiel Raadplegen"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
		</Grid>

		<!-- SCROLLABLE CONTENT -->
		<ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      PanningMode="VerticalOnly">
			<StackPanel>

				<!-- PROFIEL INFORMATIE CARD -->
				<Border Background="#1C1C1C"
                        BorderBrush="#374151"
                        BorderThickness="4"
                        CornerRadius="12"
                        Padding="40"
                        Margin="0,0,0,30">
					<StackPanel>
						<StackPanel Orientation="Horizontal" Margin="0,0,0,30">
							<Border Background="#9333EA"
                                    Width="50"
                                    Height="50"
                                    CornerRadius="25"
                                    Margin="0,0,15,0">
								<TextBlock Text="ðŸ‘¤"
                                         FontSize="28"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
							</Border>
							<TextBlock Text="Mijn Gegevens"
                                     FontSize="32"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     VerticalAlignment="Center"/>
						</StackPanel>

						<!-- Voornaam -->
						<TextBlock Text="Voornaam *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<TextBox x:Name="VoornaamTextBox"
                               Height="60"
                               FontSize="18"
                               Background="#1F2937"
                               Foreground="White"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,20"/>

						<!-- Achternaam -->
						<TextBlock Text="Achternaam *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<TextBox x:Name="AchternaamTextBox"
                               Height="60"
                               FontSize="18"
                               Background="#1F2937"
                               Foreground="White"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,20"/>

						<!-- Email -->
						<TextBlock Text="Email"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<TextBox x:Name="EmailTextBox"
                               Text="gebruiker@example.com"
                               Height="60"
                               FontSize="18"
                               Background="#1F2937"
                               Foreground="White"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,20"/>

						<!-- Wachtwoord -->
						<TextBlock FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8">
							<Run Text="Nieuwe Wachtwoord"/>
                        </TextBlock>
						<PasswordBox x:Name="PasswordBox"
                                   Height="60"
                                   FontSize="18"
                                   Background="#1F2937"
                                   Foreground="White"
                                   BorderBrush="#4B5563"
                                   BorderThickness="4"
                                   Padding="15,0"
                                   VerticalContentAlignment="Center"
                                   Margin="0,0,0,20"/>

						<!-- Wachtwoord Bevestigen -->
						<TextBlock Text="Wachtwoord Bevestigen"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<PasswordBox x:Name="ConfirmPasswordBox"
                                   Height="60"
                                   FontSize="18"
                                   Background="#1F2937"
                                   Foreground="White"
                                   BorderBrush="#4B5563"
                                   BorderThickness="4"
                                   Padding="15,0"
                                   VerticalContentAlignment="Center"
                                   Margin="0,0,0,20"/>

						<!-- Telefoonnummer -->
						<TextBlock Text="Telefoonnr."
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<TextBox x:Name="PhoneTextBox"
                               Text="+32 123 45 67 89"
                               Height="60"
                               FontSize="18"
                               Background="#1F2937"
                               Foreground="White"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,20"/>

						<!-- IBAN (Read-only) -->
						<TextBlock FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8">
							<Run Text="IBAN"/>
							<Run Text=" (Alleen lezen)"
                                 FontSize="16"
                                 FontWeight="Normal"
                                 Foreground="#9CA3AF"/>
						</TextBlock>
						<TextBox x:Name="IbanTextBox"
                               Text="BE68 5390 0754 7034"
                               Height="60"
                               FontSize="18"
                               Background="#374151"
                               Foreground="#9CA3AF"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               IsReadOnly="True"
                               Margin="0,0,0,20"/>

						<!-- Geboortedatum -->
						<TextBlock Text="Geboortedatum"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
                        <DatePicker x:Name="BirthdatePicker"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Margin="0,0,0,20">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#1F2937"/>
                                    <Setter Property="BorderBrush" Value="#4B5563"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="10,0,0,0"/>
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>

                        <!-- Adres -->
                        <!-- Straat -->
                        <TextBlock Text="Straatnaam *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="StraatTextBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,20"/>

                        <!-- Huisnummer en Bus naast elkaar -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Huisnummer *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="HuisnummerTextBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                        <TextBlock Text="Bus (optioneel)"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="BusTextBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Postcode -->
                        <TextBlock Text="Postcode *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="PostcodeTextBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,20"/>

                        <!-- Gemeente -->
                        <TextBlock Text="Gemeente *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="GemeenteTextBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,20"/>

                        <!-- Land -->
                        <TextBlock Text="Land *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="LandTextBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,30"/>


                        <!-- Opslaan Knop -->
						<Button x:Name="SaveButton"
                              Height="80"
                              FontSize="24"
                              FontWeight="Bold"
                              Background="#9333EA"
                              Foreground="White"
                              BorderBrush="#A855F7"
                              BorderThickness="4"
                              Cursor="Hand"
                              Content="Wijzigingen Opslaan"
                              Click="SaveButton_Click"/>
					</StackPanel>
				</Border>

				<!-- PROFIEL VERWIJDEREN CARD -->
				<Border Background="#450A0A"
                        BorderBrush="#991B1B"
                        BorderThickness="4"
                        CornerRadius="12"
                        Padding="40">
					<StackPanel>
						<StackPanel Orientation="Horizontal" Margin="0,0,0,25">
							<Border Background="#DC2626"
                                    Width="50"
                                    Height="50"
                                    CornerRadius="25"
                                    Margin="0,0,15,0">
								<TextBlock Text="ðŸ—‘ï¸"
                                         FontSize="28"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
							</Border>
							<TextBlock Text="Profiel Verwijderen"
                                     FontSize="32"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     VerticalAlignment="Center"/>
						</StackPanel>

						<Border Background="#7F1D1D"
                                BorderBrush="#991B1B"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,25">
							<StackPanel>
								<TextBlock Text="âš ï¸ LET OP"
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#FEE2E2"
                                         Margin="0,0,0,10"/>
								<TextBlock Text="Deze actie kan niet ongedaan gemaakt worden. Al uw gegevens worden permanent verwijderd."
                                         FontSize="18"
                                         Foreground="#FECACA"
                                         TextWrapping="Wrap"
                                         LineHeight="28"/>
							</StackPanel>
						</Border>

						<Button x:Name="DeleteButton"
                              Height="80"
                              FontSize="24"
                              FontWeight="Bold"
                              Background="#DC2626"
                              Foreground="White"
                              BorderBrush="#F87171"
                              BorderThickness="4"
                              Cursor="Hand"
                              Click="DeleteButton_Click">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="ðŸ—‘ï¸" FontSize="28" Margin="0,0,15,0"/>
								<TextBlock Text="Profiel Verwijderen" VerticalAlignment="Center"/>
							</StackPanel>
						</Button>
					</StackPanel>
				</Border>

			</StackPanel>
		</ScrollViewer>

		<!-- KEYBOARD HINT -->
		<Border Grid.Row="2"
                Background="#1F2937"
                BorderBrush="#374151"
                BorderThickness="2"
                CornerRadius="8"
                Padding="15"
                Margin="0,20,0,0"
                HorizontalAlignment="Center">
			<StackPanel Orientation="Horizontal">
				<Border Background="#4B5563"
                        CornerRadius="6"
                        Padding="10,5"
                        Margin="0,0,10,0">
					<TextBlock Text="Z"
                             FontSize="16"
                             FontWeight="Bold"
                             Foreground="White"/>
				</Border>
				<TextBlock Text="Druk op 'Z' om terug te gaan"
                         FontSize="16"
                         Foreground="#D1D5DB"
                         VerticalAlignment="Center"/>
			</StackPanel>
		</Border>

	</Grid>
</Window>