<Window x:Class="BankApp_WPF.RegistratiePagina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AccessBank - Registreren"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#000000"
        KeyDown="Window_KeyDown">
	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- HEADER -->
		<Grid Grid.Row="0" Margin="0,0,0,30">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button x:Name="BackButton"
                    Grid.Column="0"
                    Height="60"
                    Width="180"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="White"
                    BorderThickness="4"
                    Cursor="Hand"
                    Click="BackButton_Click">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="â†" FontSize="24" Margin="0,0,10,0"/>
					<TextBlock Text="Terug" VerticalAlignment="Center"/>
				</StackPanel>
			</Button>

			<TextBlock Grid.Column="1"
                       Text="Registreren"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
		</Grid>

		<!-- SCROLLABLE CONTENT -->
		<ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      PanningMode="VerticalOnly">
			<StackPanel>

				<!-- REGISTRATIE CARD -->
				<Border Background="#1C1C1C"
                        BorderBrush="#374151"
                        BorderThickness="4"
                        CornerRadius="12"
                        Padding="40"
                        Margin="0,0,0,30">
					<StackPanel>
						<StackPanel Orientation="Horizontal" Margin="0,0,0,30">
							<Border Background="#9333EA"
                                    Width="50"
                                    Height="50"
                                    CornerRadius="25"
                                    Margin="0,0,15,0">
								<TextBlock Text="ðŸ“"
                                         FontSize="28"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
							<TextBlock Text="Account Aanmaken"
                                     FontSize="32"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     VerticalAlignment="Center"/>
						</StackPanel>

						<!-- Voornaam -->
						<TextBlock Text="Voornaam *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<TextBox x:Name="VoornaamBox"
                               Height="60"
                               FontSize="18"
                               Background="#1F2937"
                               Foreground="White"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,20"/>

						<!-- Achternaam -->
						<TextBlock Text="Achternaam *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<TextBox x:Name="AchternaamBox"
                               Height="60"
                               FontSize="18"
                               Background="#1F2937"
                               Foreground="White"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,20"/>

						<!-- Email -->
						<TextBlock Text="Email *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<TextBox x:Name="EmailBox"
                               Height="60"
                               FontSize="18"
                               Background="#1F2937"
                               Foreground="White"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,20"/>

						<!-- Wachtwoord -->
						<TextBlock Text="Wachtwoord *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<PasswordBox x:Name="WachtwoordBox"
                                   Height="60"
                                   FontSize="18"
                                   Background="#1F2937"
                                   Foreground="White"
                                   BorderBrush="#4B5563"
                                   BorderThickness="4"
                                   Padding="15,0"
                                   VerticalContentAlignment="Center"
                                   Margin="0,0,0,20"/>

						<!-- Wachtwoord Bevestigen -->
						<TextBlock Text="Wachtwoord Bevestigen *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<PasswordBox x:Name="BevestigBox"
                                   Height="60"
                                   FontSize="18"
                                   Background="#1F2937"
                                   Foreground="White"
                                   BorderBrush="#4B5563"
                                   BorderThickness="4"
                                   Padding="15,0"
                                   VerticalContentAlignment="Center"
                                   Margin="0,0,0,20"/>

						<!-- Telefoonnummer -->
						<TextBlock Text="Telefoonnummer *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
						<TextBox x:Name="TelefoonBox"
                               Height="60"
                               FontSize="18"
                               Background="#1F2937"
                               Foreground="White"
                               BorderBrush="#4B5563"
                               BorderThickness="4"
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,20"/>

						<!-- Geboortedatum -->
						<TextBlock Text="Geboortedatum *"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 Margin="0,0,0,8"/>
                        <DatePicker x:Name="GeboortePicker"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Margin="0,0,0,20">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#1F2937"/>
                                    <Setter Property="BorderBrush" Value="#4B5563"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="10,0,0,0"/>
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>

                        <!-- Adres -->
                        <!-- Straatnaam -->
                        <TextBlock Text="Straatnaam *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="StraatBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,20"/>

                        <!-- Huisnummer en Bus -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Huisnummer *"
                                        FontSize="20"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Margin="0,0,0,8"/>
                                <TextBox x:Name="HuisnrBox"
                                        Height="60"
                                        FontSize="18"
                                        Background="#1F2937"
                                        Foreground="White"
                                        BorderBrush="#4B5563"
                                        BorderThickness="4"
                                        Padding="15,0"
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Bus (optioneel)"
                                        FontSize="20"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Margin="0,0,0,8"/>
                                <TextBox x:Name="BusBox"
                                        Height="60"
                                        FontSize="18"
                                        Background="#1F2937"
                                        Foreground="White"
                                        BorderBrush="#4B5563"
                                        BorderThickness="4"
                                        Padding="15,0"
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Postcode -->
                        <TextBlock Text="Postcode *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="PostcodeBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,20"/>

                        <!-- Gemeente -->
                        <TextBlock Text="Gemeente *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="GemeenteBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,20"/>

                        <!-- Land -->
                        <TextBlock Text="Land *"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Margin="0,0,0,8"/>
                        <TextBox x:Name="LandBox"
                                Height="60"
                                FontSize="18"
                                Background="#1F2937"
                                Foreground="White"
                                BorderBrush="#4B5563"
                                BorderThickness="4"
                                Padding="15,0"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,30"/>

                        <TextBlock Text="Uw IBAN en kaartnummer worden automatisch toegewezen na succesvolle registratie" 
                                   Foreground="#9CA3AF" 
                                   FontSize="16" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,30" 
                                   HorizontalAlignment="Center"/>

                        <!-- Registreer Knop -->
						<Button x:Name="RegistreerBtn"
                              Height="80"
                              FontSize="24"
                              FontWeight="Bold"
                              Background="#9333EA"
                              Foreground="White"
                              BorderBrush="#A855F7"
                              BorderThickness="4"
                              Cursor="Hand"
                              Content="Account Aanmaken"
                                Click="RegistreerBtn_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

		<!-- KEYBOARD HINT -->
		<Border Grid.Row="2"
                Background="#1F2937"
                BorderBrush="#374151"
                BorderThickness="2"
                CornerRadius="8"
                Padding="15"
                Margin="0,20,0,0"
                HorizontalAlignment="Center">
			<StackPanel Orientation="Horizontal">
				<Border Background="#4B5563"
                        CornerRadius="6"
                        Padding="10,5"
                        Margin="0,0,10,0">
					<TextBlock Text="Z"
                             FontSize="16"
                             FontWeight="Bold"
                             Foreground="White"/>
				</Border>
				<TextBlock Text="Druk op 'Z' om terug te gaan"
                         FontSize="16"
                         Foreground="#D1D5DB"
                         VerticalAlignment="Center"/>
			</StackPanel>
		</Border>

    </Grid>
</Window>
