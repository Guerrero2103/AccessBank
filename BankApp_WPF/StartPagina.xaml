<Window x:Class="BankApp_WPF.StartPagina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AccessBank - Startpagina"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#000000">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">

            <!-- Titel -->
            <TextBlock Text="AccessBank"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Registreren-knop -->
            <Button x:Name="BtnRegister"
                    Content="👥 Registreren"
                    Click="BtnRegister_Click"
                    Background="#1E88E5"
                    Foreground="White"
                    FontSize="24"
                    FontWeight="Bold"
                    Height="80"
                    Margin="0,0,0,20"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Inloggen-knop -->
            <Button x:Name="BtnLogin"
                    Content="🔐 Inloggen"
                    Click="BtnLogin_Click"
                    Background="#10B981"
                    Foreground="White"
                    FontSize="24"
                    FontWeight="Bold"
                    Height="80"
                    Margin="0,0,0,20"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Card Stop -->
            <Button x:Name="BtnCardStop"
                    Content="💳 Card Stop"
                    Click="BtnCardStop_Click"
                    Background="#EF4444"
                    Foreground="White"
                    FontSize="24"
                    FontWeight="Bold"
                    Height="80"
                    Margin="0,0,0,40"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Help-knop -->
            <Button x:Name="BtnHelp"
                    Content="❓ Hulp"
                    Click="BtnHelp_Click"
                    Background="#374151"
                    Foreground="White"
                    FontSize="20"
                    Height="60"
                    BorderThickness="0"
                    Cursor="Hand"/>

        </StackPanel>

        <!-- Thema-knop rechtsboven -->
        <Button x:Name="BtnTheme"
                Content="☀"
                Click="BtnTheme_Click"
                Width="60"
                Height="60"
                Background="#FDB022"
                Foreground="White"
                FontSize="26"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"/>
    </Grid>
</Window>
