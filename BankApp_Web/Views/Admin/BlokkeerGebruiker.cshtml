@model BankApp_Models.BankUser

@{
    ViewData["Title"] = "Gebruiker Blokkeren";
}

<h1>Gebruiker Blokkeren</h1>

<h3>Weet u zeker dat u deze gebruiker wilt blokkeren?</h3>
<div>
    <h4>Gebruiker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voornaam) @Html.DisplayFor(model => model.Achternaam)
        </dd>
    </dl>

    <form asp-action="BlokkeerGebruikerConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Blokkeer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
    </form>
</div>
