<!DOCTYPE html>
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization

@inject IViewLocalizer _localizer

<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <title>@ViewData["Title"] - AccessBank</title>
 <!-- Bootstrap CSS via CDN -->
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
 <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
 <header>
 <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
 <div class="container-fluid">
 <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BankApp</a>
 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
 aria-expanded="false" aria-label="Toggle navigation">
 <span class="navbar-toggler-icon"></span>
 </button>
 <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
 <ul class="navbar-nav flex-grow-1">
 <li class="nav-item">
 <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@_localizer["Home"]</a>
 </li>
 @if (User.IsInRole("Klant"))
 {
 <li class="nav-item">
 <a class="nav-link text-dark" asp-area="" asp-controller="Rekeningen" asp-action="Index">@_localizer["Rekeningen"]</a>
 </li>
 <li class="nav-item">
 <a class="nav-link text-dark" asp-area="" asp-controller="Transacties" asp-action="Index">@_localizer["Transacties"]</a>
 </li>
 }
 @if (User.IsInRole("Medewerker") || User.IsInRole("Admin"))
 {
 <li class="nav-item">
 <a class="nav-link text-dark" asp-area="" asp-controller="Medewerker" asp-action="Index">@_localizer["Wachtende Transacties"]</a>
 </li>
 }
 @if (User.IsInRole("Admin"))
 {
 <li class="nav-item">
 <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">@_localizer["Gebruikersbeheer"]</a>
 </li>
 }
 <li class="nav-item">
 <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@_localizer["Privacy"]</a>
 </li>
 </ul>

 <div class="d-flex align-items-center">
 <partial name="_LoginPartial" />

 <!-- Language switcher -->
 <form asp-controller="Languages" asp-action="SetLanguage" method="post" class="ms-3">
 <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
 <select name="culture" id="cultureSelect" class="form-select form-select-sm" onchange="this.form.submit()">
 @if (CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "nl")
 {
 <option value="nl" selected> Nederlands</option>
 }
 else
 {
 <option value="nl"> Nederlands</option>
 }

 @if (CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "en")
 {
 <option value="en" selected> English</option>
 }
 else
 {
 <option value="en"> English</option>
 }

 @if (CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "fr")
 {
 <option value="fr" selected> Français</option>
 }
 else
 {
 <option value="fr"> Français</option>
 }
 </select>
 </form>
 </div>
 </div>
 </div>
 </nav>
 </header>
 <div class="container">
 <main role="main" class="pb-3">
 @RenderBody()
 </main>
 </div>

 <footer class="border-top footer text-muted">
 <div class="container">
 &copy;2025 - AccessBank - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
 </div>
 </footer>
 <!-- Bootstrap JS via CDN -->
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
 <script src="~/js/site.js" asp-append-version="true"></script>
 @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
