@model IEnumerable<BankApp_Models.Transactie>

@if (!Model.Any())
{
 <div class="alert alert-info">Geen recente transacties.</div>
}
else
{
 <ul class="list-group">
 @foreach (var t in Model)
 {
 <li class="list-group-item d-flex justify-content-between align-items-center">
 <div>
 <strong>@t.Datum.ToString("g")</strong> &nbsp; - &nbsp; @t.NaarIban ?? t.VanIban
 <div class="small text-muted">@t.Omschrijving</div>
 </div>
 <span class="badge @(t.Status == BankApp_Models.TransactieStatus.Voltooid ? "bg-success" : (t.Status == BankApp_Models.TransactieStatus.Wachtend ? "bg-warning" : "bg-danger"))">@t.Bedrag.ToString("C")</span>
 </li>
 }
 </ul>
}